<resources>
    <!-- Base application theme. -->
    <style name="Theme.Breakmeet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/edit_text_background</item>
        <item name="colorPrimaryVariant">@color/edit_text_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/edit_text_background</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@color/edit_text_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="button">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/edit_text_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:radius">20dp</item>
        <item name="android:importantForAutofill">no</item>
    </style>
</resources>